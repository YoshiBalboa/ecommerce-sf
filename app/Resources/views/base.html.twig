<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		{# The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags #}

		<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
		<title>{% block head_title %}{{ 'view.sitename'|trans }}{% endblock %}</title>

		{# CSS #}
		<link href="{{ asset('css/bootstrap-3.3.5.min.css') }}" rel="stylesheet">
		<link href="{{ asset('css/bootstrap-theme-3.3.5.min.css') }}" rel="stylesheet">
		<link href="{{ asset('jquery-ui-1.11.4.smoothness/jquery-ui.min.css') }}" rel="stylesheet">
		<link href="{{ asset('jquery-ui-1.11.4.smoothness/jquery-ui.structure.min.css') }}" rel="stylesheet">
		<link href="{{ asset('jquery-ui-1.11.4.smoothness/jquery-ui.theme.min.css') }}" rel="stylesheet">
		<link href="{{ asset('css/base.css') }}" rel="stylesheet">
		{% block stylesheets %}{% endblock %}

		{# JAVASCRIPTS #}
		<script src="{{ asset('js/jquery-2.1.4.min.js') }}"></script>
		<script src="{{ asset('jquery-ui-1.11.4.smoothness/jquery-ui.min.js') }}"></script>
		<script src="{{ asset('js/bootstrap-3.3.5.min.js') }}"></script>
		<script src="{{ asset('js/docs-2.6.0-min.js') }}"></script>
		<script src="{{ asset('js/underscore-1.8.3-min.js') }}"></script>
		<script src="{{ asset('js/base.js') }}"></script>

		<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
		<!--[if lt IE 9]>
			<script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
			<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->
	</head>

	<body role="document">
		{# TITRE / MENU #}
		{{ knp_menu_render('main') }}

		{# BODY #}
		<div class="container theme-showcase" role="main">
			{% for label, flashes in app.session.flashbag.all %}
				{% for flash in flashes %}
					<div class="alert alert-{{ label }}">
						{{ flash }}
					</div>
				{% endfor %}
			{% endfor %}

			{% block body %}{% endblock %}
		</div>

		{# JAVASCRIPTS #}
		{% block javascripts %}{% endblock %}
	</body>
</html>
